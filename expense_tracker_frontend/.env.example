# Example environment variables for expense_tracker_frontend
# Copy this file to .env and adjust values as needed. Do not commit real secrets.

# Backend endpoints
REACT_APP_API_BASE=http://localhost:4000/api
REACT_APP_BACKEND_URL=http://localhost:4000
REACT_APP_FRONTEND_URL=http://localhost:3000
REACT_APP_WS_URL=ws://localhost:4000/ws

# Runtime behavior
REACT_APP_NODE_ENV=development
REACT_APP_NEXT_TELEMETRY_DISABLED=1
REACT_APP_ENABLE_SOURCE_MAPS=true
REACT_APP_PORT=3000
REACT_APP_TRUST_PROXY=false
REACT_APP_LOG_LEVEL=info
REACT_APP_HEALTHCHECK_PATH=/health
REACT_APP_FEATURE_FLAGS={}
REACT_APP_EXPERIMENTS_ENABLED=false

# Notes:
# - CI environments should prefer `npm run healthcheck` to verify builds.
# - Use `npm run start:preview` if your CI requires a "start" that exits immediately with 0.
